class PlayScene : AbstractScene {
	
	field roadSegments = [
		[[-1.0, 0], [1.0, 0]],
		[[-1.0, 1], [1.0, 1]],
		[[1.0, 5], [3.0, 5]], // shifts to the right
	];
	
	field renderer;
	
	constructor() : base() {
		this.renderer = new Renderer(this);
	}
	
	function update() {
		
	}
	
	function render(rc) {
		GFX.Draw.fill(80, 180, 120);
		bg = ImageLibrary.get('backgrounds/level1.png');
		x = -rc % bg.width;
		bg.draw(x, 0);
		bg.draw(x - bg.width, 0);
		
		this.renderer.render(rc);
	}
}
